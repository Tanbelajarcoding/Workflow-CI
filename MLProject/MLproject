name: credit_card_fraud_detection

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      train_data: { type: string, default: "creditcard_train_balanced.csv" }
      test_data: { type: string, default: "creditcard_test.csv" }
      n_estimators: { type: int, default: 200 }
      max_depth: { type: int, default: 15 }
      min_samples_split: { type: int, default: 5 }
      min_samples_leaf: { type: int, default: 2 }
      max_features: { type: string, default: "sqrt" }
      class_weight: { type: string, default: "balanced" }
    command: "python modelling.py --train-data {train_data} --test-data {test_data} --n-estimators {n_estimators} --max-depth {max_depth} --min-samples-split {min_samples_split} --min-samples-leaf {min_samples_leaf} --max-features {max_features} --class-weight {class_weight}"
